<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title" parent="android:style/Theme">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="divider" parent="android:style/Theme">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="text" parent="android:style/Theme">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="image" parent="android:style/Theme">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">#42f4d9</item>
    </style>

    <style name="notetitle" parent="android:style/Theme">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="note" parent="android:style/Theme">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
